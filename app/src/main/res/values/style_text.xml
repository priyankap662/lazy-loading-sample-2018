<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- header styles -->
    <style name="Header" parent="WrapContentLayout">
        <item name="android:paddingBottom">@dimen/content_spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="fontPath">fonts/MarkPro-Bold.ttf</item>
    </style>

    <style name="Header.H1">
        <item name="android:textSize">@dimen/header1_text</item>
    </style>

    <style name="Header.H4">
        <item name="android:textSize">@dimen/header4_text</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Header.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/reversed_text_color</item>
        <item name="android:textSize">@dimen/header_title</item>
    </style>

    <!-- text appearance styles -->
    <style name="TextAppearance">
        <item name="fontPath">fonts/MarkPro.ttf</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="fontPath">fonts/MarkPro-Bold.ttf</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>

    <style name="TextAppearance.Secondary.Bold">
        <item name="fontPath">fonts/MarkPro-Bold.ttf</item>
    </style>

</resources>